<div class="container mt-5" id="overall-div">
  <h1 class="text-center mb-5 wow animate__zoomIn" data-wow-duration="2s" id="projects" style="font-weight: bolder; color: black">Projects</h1>
  <% @projects.each do |project| %>
    <div class="row mx-auto row-div">      
        <div class="col-md-6 project-col-divs" id="project-left-div">
          <div class="card text-center">
            <%= image_tag(project.photo, class: "card-img-top", alt: "photo here") %>
          </div>
        </div>
        <div class="col-md-6 project-col-divs" id="project-right-div">
          <div class="card text-center">
            <div class="card text-center">
              <div class="card-body">
                <h3 class="card-title" id="project-title"><%= project.name %></h3>
                <p class="card-text d-none d-md-block"><%= project.detailed_description %></p>
                <div class="d-flex justify-content-between">
                  <%=link_to("View", project.live_demo, class: "project-links", target: "_blank") %>
                  <%=link_to("Github", project.github_link, class: "project-links", target: "_blank") %>
                </div>
                <div class="d-md-flex justify-content-between mt-2 d-none flex-wrap" id="technology-div">
                  <% project.technologies.each do |tech| %>
                    <span class="technology-span m-1"><%= tech.technology %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>

